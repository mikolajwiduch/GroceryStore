<Window x:Class="GroceryStore.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:GroceryStore.Views"
        Title="Main" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <Button Content="Products" Command="{Binding NavigateToProductsCommand}" />
            <Button Content="Order" Command="{Binding NavigateToOrderCommand}" />
            <ContentControl Content="{Binding CurrentView}" />
        </StackPanel>
    </Grid>
</Window>
