<Window x:Class="GroceryStore.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grocery Store" Height="450" Width="800">
    <Grid>
        <ListBox ItemsSource="{Binding Products}" DisplayMemberPath="Name"/>
        <Button Content="Add to Order" Command="{Binding AddToOrderCommand}"/>
        <Button Content="Finalize Order" Command="{Binding FinalizeOrderCommand}"/>
    </Grid>
</Window>
