<Window x:Class="GroceryStore.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grocery Store" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Content="Products" Width="100" Command="{Binding NavigateToProductsCommand}"/>
            <Button Content="Create Order" Width="100" Command="{Binding NavigateToOrderCommand}" Margin="0,50,0,0"/>
            <Frame x:Name="MainFrame" Content="{Binding CurrentView}"/>
        </StackPanel>
    </Grid>
</Window>
