<Window x:Class="GroceryStore.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="400">
    <Grid>
        <TextBox Text="{Binding Username}" Width="200" Margin="10"/>
        <PasswordBox Password="{Binding Password}" Width="200" Margin="10"/>
        <Button Content="Login" Command="{Binding LoginCommand}" Width="100" Margin="10"/>
    </Grid>
</Window>
