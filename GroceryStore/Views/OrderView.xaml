<UserControl x:Class="GroceryStore.Views.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Height="300">
    <Grid>
        <StackPanel>
            <ListBox ItemsSource="{Binding OrderItems}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding ProductName}" Width="200" />
                            <TextBlock Text="{Binding Quantity}" Width="50" />
                            <TextBlock Text="{Binding TotalPrice, StringFormat=C}" Width="100" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Finalize Order" Command="{Binding FinalizeOrderCommand}" Width="150" />
        </StackPanel>
    </Grid>
</UserControl>
