<Window x:Class="GroceryStore.Views.CartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GroceryStore.ViewModels"
        Title="CartView" Height="450" Width="800">
    <Window.DataContext>
        <vm:CartViewModel />
    </Window.DataContext>
    <Grid>
        <ListView ItemsSource="{Binding Cart}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" Width="150"/>
                        <TextBlock Text="{Binding Price, StringFormat=C}" Width="100"/>
                        <TextBlock Text="{Binding Quantity}" Width="50"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
            <TextBlock Text="Total:" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding TotalPrice, StringFormat=C}" VerticalAlignment="Center"/>
            <Button Content="Finalize Order" Command="{Binding FinalizeOrderCommand}"/>
        </StackPanel>
    </Grid>
</Window>
